#!/usr/bin/execlineb -P

foreground { mkdir -p env }
foreground {
  fdclose 2 redirfd -x 1 env/tag
  sh -c "cd ..; echo ${PWD##*/}"
}

s6-envdir -f env
import -i tag
import -D nobody user
import -D "/var/log/$tag" dest
import -D "t $dest" -Cs script
s6-envuidgid -D 65534:65534 $user

foreground { mkdir -pm 2700 $dest }
foreground { s6-chown -U $dest }

s6-applyuidgid -U
exec -c
s6-log $script
